<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="edu.temple.tuhub.CourseDetailsFragment">

    <View
        android:id="@+id/listingview"
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:layout_below="@+id/courseMeetingTerm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:background="#990033"/>

    <TextView
        android:id="@+id/inputtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listingview"
        android:layout_centerHorizontal="true"
        android:text="    " />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/listingview"
        android:layout_marginTop="18dp"
        android:paddingLeft="5dp"
        app:srcCompat="@color/Nothing" />

    <TextView
        android:id="@+id/sellertv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:text="Seller: " />

    <TextView
        android:id="@+id/inputSeller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_toEndOf="@+id/inputtitle" />

    <TextView
        android:id="@+id/pricetv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sellertv"
        android:layout_marginTop="14dp"
        android:text="Price:" />

    <TextView
        android:id="@+id/inputprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pricetv"
        android:layout_toEndOf="@+id/inputSeller"
        android:layout_alignStart="@+id/inputSeller" />

    <TextView
        android:id="@+id/descriptiontv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Description: " />

    <TextView
        android:id="@+id/inputDescription"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
