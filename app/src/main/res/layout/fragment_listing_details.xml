<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_view"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_text_size"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/text_margin"
        android:layout_marginTop="@dimen/text_margin"
    />


    <TextView
        android:id="@+id/seller_text"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/body_text_size"
        android:textStyle="bold"
        android:text="@string/posted_by" />
        <TextView
            android:id="@+id/seller_input"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/body_text_size"/>

    <TextView
        android:id="@+id/price_view"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price_input"
        android:textStyle="bold"
        android:textSize="@dimen/body_text_size"/>

    <TextView
        android:id="@+id/price_input"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/body_text_size"/>

    <TextView
        android:id="@+id/start_text"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_date"
        android:textStyle="bold"
        android:textSize="@dimen/body_text_size"/>

    <TextView
        android:id="@+id/start_input"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/body_text_size"/>

    <TextView
        android:id="@+id/location_text"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/body_text_size"
        android:textStyle="bold"
        android:text="@string/location" />

    <TextView
        android:id="@+id/location_input"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/body_text_size"/>

    <TextView
        android:id="@+id/hours_text"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/body_text_size"
        android:textStyle="bold"
        android:text="@string/hours_per_week" />

    <TextView
        android:id="@+id/hours_input"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/body_text_size"/>

    <TextView
        android:id="@+id/pay_text"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/body_text_size"
        android:textStyle="bold"
        android:text="@string/pay" />

    <TextView
        android:id="@+id/pay_input"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/body_text_size"/>

    <TextView
        android:id="@+id/description_text"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/body_text_size"
        android:textStyle="bold"
        android:text="@string/description_input" />

    <TextView
        android:id="@+id/description_input"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/body_text_size"/>
        <TextView
            android:id="@+id/date_posted_text"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/body_text_size"
            android:textStyle="bold"
            android:text="@string/date_posted" />

        <TextView
            android:id="@+id/date_posted_input"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/body_text_size"/>

        <edu.temple.tuhub.ImageScroller
            android:id="@+id/listing_details_image_scroller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/contact_owner_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorAccent"
            android:text="@string/contact_listing_owner"/>
    </LinearLayout>
</ScrollView>